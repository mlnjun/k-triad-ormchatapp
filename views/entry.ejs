<form action="/entry" method="post">
  <div class="login-screen">
    <div class="login-body">
      <a href="index.html" class="login-logo">
        <img src="img/logo.svg" alt="Quick Chat" />
      </a>
      <h6>Welcome to Quick Chat App,<br />Create your account.</h6>
      <div class="field-wrapper">
        <select name="entry_type_code">
          <option value="0" selected>선택</option>
          <option value="1">개인</option>
          <option value="2">기업</option>
        </select>
        <div class="field-placeholder">가입 유형</div>
      </div>
      <div class="field-wrapper">
        <input type="email" autofocus name="email" required />
        <div class="field-placeholder">이메일</div>
      </div>
      <div class="field-wrapper mb-3">
        <input type="text" name="name" required />
        <div class="field-placeholder">이름</div>
      </div>
      <div class="field-wrapper mb-3">
        <input type="text" name="telephone" required />
        <div class="field-placeholder">전화번호</div>
      </div>
      <div class="field-wrapper">
        <input type="password" name="password" required />
        <div class="field-placeholder">비밀번호</div>
      </div>
      <div class="field-wrapper mb-3">
        <input type="date" name="birth_date" required />
        <div class="field-placeholder">생년월일</div>
      </div>
      <div class="field-wrapper mb-3">
        <input  type="text" name="profile_img_path"/>
        <div class="field-placeholder">프로필 이미지 주소</div>
      </div>

      <div class="actions">
        <button type="submit" class="btn btn-primary ml-auto">가입하기</button>
      </div>
    </div>
    <div class="login-footer">
      <span class="additional-link"
        >Have an account?
        <a href="/login" class="btn btn-secondary">Login</a></span
      >
    </div>
  </div>
</form>
